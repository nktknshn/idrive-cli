{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types"
    ],
    "target": "es6", 
    "lib": [
      "es6"
    ],
    "module": "commonjs", 
    "sourceMap": true, 
    "rootDir": ".", 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true ,
    "noEmit": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
  ],
  "include": [
    "test/**/*.ts",
    "src/**/*.ts",
  ],
}